{
	"extends": "airbnb-base",
	"rules": {
		"no-param-reassign": ["error", { "props": false }],
		"newline-per-chained-call": 0,
		"max-len": ["error", { "code": 200 }],
		"no-underscore-dangle": ["error", { "allow": ["_id"] }],
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"comma-dangle": ["error", "always-multiline",
			{
				"functions": "never"
			}
		],
		"no-plusplus": ["error",
			{
				"allowForLoopAfterthoughts": true
			}
		]
	}
}
